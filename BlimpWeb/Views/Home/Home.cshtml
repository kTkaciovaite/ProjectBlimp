<div class="jumbotron">
    <div class="container text-center">
        <h1>Meet the Future</h1>
        <a class="btn btn-primary" href="/Items">Shop Now</a>
    </div>
</div>

<div class="container" ng-app="itemsApp">
    <h2 class="text-center">Latest Products</h2>

    <div class="row">
        <div class="col-sm-4" ng-repeat="item in vm.items | orderBy: '-DateUpDated' | limitTo: 5">
            <div class="thumbnail">
                <img src="{{ item.Image }}" class="img-responsive" style="width: 100%" alt="Image">
                <div class="caption">
                    <h3><a href="/Items/{{ item.Id }}">{{ item.Name }}</a>
                    </h3>
                    <small>{{ item.DateUpDated | date:"yyyy-dd-MM HH':'m" }}</small>
                    <div class="text-center">
                        <h2>{{ item.Price }} &euro;</h2>
                        <a class="btn btn-default" ng-click="vm.addItem(item)" type="button" role="button" href="/Cart">Add to cart</a><br />
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>