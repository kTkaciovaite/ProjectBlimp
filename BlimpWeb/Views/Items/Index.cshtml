<div class="container" ng-app="itemsApp" ng-controller="itemsListController as vm">
    <div class="row">
        <div class="col-sm-4" ng-repeat="item in vm.items | orderBy: '-DateUpDated'">
            <div class="panel panel-primary">
                <div class="panel-heading"><a ng-href="/Items/Details/{{ item.Id }}" style="color: white;">{{ item.Name }}</a></div>
                <div class="panel-body"><img src="{{ item.Image }}" class="img-responsive" style="width: 100%" alt="Image">
                </div>
                <div class="panel-footer">{{ item.DateUpDated | date:"yyyy-dd-MM HH':'m"}}
                    <span>{{ item.Price }}</span>
                    <a class="btn btn-default" href="">Add to cart</a>
                </div>
            </div>
        </div>
    </div>
</div>